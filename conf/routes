# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index_2()
GET     /login                      controllers.Application.login()
POST    /authenticate               controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()
GET     /index                      controllers.Application.index()
GET		/libraly					controllers.Application.initview()
POST	/libraly					controllers.Application.register()
POST	/logicalDelete/:id			controllers.Application.logicalDelete(id : Long)
POST    /index/:id					controllers.Application.delete(id : Long)
POST    /borrowBook/:id				controllers.Application.borrowBook(id : Long)
POST    /returnBook/:id				controllers.Application.returnBook(id : Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
